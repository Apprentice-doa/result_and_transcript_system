CREATE TABLE results (
result_id INT NOT NULL COMMENT 'result Id',
s_n INT NOT NULL COMMENT 'serial number',
mat_no TEXT NOT NULL COMMENT 'mat number',
first_name TEXT NOT NULL COMMENT 'first name ',
surname TEXT NOT NULL COMMENT 'surname',
other_name INT NOT NULL COMMENT 'other names',
c_a INT NOT NULL COMMENT 'continuous assessment',
exam INT NOT NULL COMMENT 'exam scores',
Total INT NOT NULL COMMENT 'total score',
course_code TEXT NOT NULL COMMENT 'course code',
session_year YEAR NOT NULL COMMENT 'section year',
dept TEXT NOT NULL COMMENT 'Department',
course_title TEXT NOT NULL COMMENT 'course title',
course_unit INT NOT NULL COMMENT 'course units');

CREATE TABLE `courses` (
`course_id` INT AUTO_INCREMENT NOT NULL UNIQUE PRIMARY KEY,
`course_code` TEXT NOT NULL,
`course_unit` INT NOT NULL,
`course_title` TEXT NOT NULL,
`course_semester` YEAR NOT NULL);

CREATE TABLE `department` (
`dept_name` TEXT NOT NULL,
`dept_faculty` TEXT NOT NULL,
`comments` TEXT NOT NULL,
dept_id INT NOT NULL PRIMARY KEY COMMENT 'department Id');

CREATE TABLE `dynamic_elm` (
`hod` TEXT NOT NULL,
`lecturer` TEXT NOT NULL,
`course_id` INT NOT NULL,
`course_title` TEXT NOT NULL);

CREATE TABLE `session_idr` (
`session_idr` INT AUTO_INCREMENT NOT NULL UNIQUE PRIMARY KEY,
`session_year` YEAR NOT NULL,
`comments` INT NOT NULL);

CREATE TABLE students (
student_id INT AUTO_INCREMENT NOT NULL UNIQUE PRIMARY KEY,
`student_matno` TEXT NOT NULL,
`student_firstname` TEXT NOT NULL,
`student_surname` TEXT NOT NULL,
`student_othernames` INT NOT NULL,
`student_deptidr` TEXT NOT NULL);

ALTER TABLE results ADD CONSTRAINT results_mat_no_students_`student_matno` FOREIGN KEY (mat_no) REFERENCES students(`student_matno`);
ALTER TABLE results ADD CONSTRAINT results_first_name_students_`student_firstname` FOREIGN KEY (first_name) REFERENCES students(`student_firstname`);
ALTER TABLE results ADD CONSTRAINT results_surname_students_`student_surname` FOREIGN KEY (surname) REFERENCES students(`student_surname`);
ALTER TABLE results ADD CONSTRAINT results_other_name_students_`student_othernames` FOREIGN KEY (other_name) REFERENCES students(`student_othernames`);
ALTER TABLE results ADD CONSTRAINT results_course_code_`courses`_`course_code` FOREIGN KEY (course_code) REFERENCES `courses`(`course_code`);
ALTER TABLE results ADD CONSTRAINT results_session_year_`session_idr`_`session_year` FOREIGN KEY (session_year) REFERENCES `session_idr`(`session_year`);
ALTER TABLE results ADD CONSTRAINT results_dept_`department`_`dept_name` FOREIGN KEY (dept) REFERENCES `department`(`dept_name`);
ALTER TABLE results ADD CONSTRAINT results_course_title_`courses`_`course_title` FOREIGN KEY (course_title) REFERENCES `courses`(`course_title`);
ALTER TABLE results ADD CONSTRAINT results_course_unit_`courses`_`course_unit` FOREIGN KEY (course_unit) REFERENCES `courses`(`course_unit`);
ALTER TABLE `courses` ADD CONSTRAINT `courses`_`course_semester`_`session_idr`_`session_year` FOREIGN KEY (`course_semester`) REFERENCES `session_idr`(`session_year`);
ALTER TABLE students ADD CONSTRAINT students_`student_deptidr`_`department`_`dept_name` FOREIGN KEY (`student_deptidr`) REFERENCES `department`(`dept_name`);
